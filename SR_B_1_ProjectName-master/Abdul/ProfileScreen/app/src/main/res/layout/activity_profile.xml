<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".profile">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.joooonho.SelectableRoundedImageView
                android:layout_marginTop="8dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/photo"
                app:sriv_border_color="#FFCC00"
                app:sriv_border_width="2dp"
                app:sriv_oval="true" />

            <EditText
                android:id="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="User bio"
                android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        >

                <TextView
                    android:id="@+id/login_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Last Login"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/lastlogin_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/blue"
                    android:text="online"
                    android:gravity="center"
                    android:textStyle="bold" />
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/points_scored"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/login_date"
                            android:text="Points"
                            android:layout_weight="2"
                            android:textAppearance="?android:textAppearanceLarge" />

                        <TextView
                            android:id="@+id/total_points"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/blue"
                            android:text="0"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textAppearance="?android:textAppearanceLarge"/>

            </LinearLayout>


            <TextView
                android:id="@+id/user_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@color/blue"
                android:text="Stats"/>

    <LinearLayout
        android:id="@+id/stats_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/wins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wins"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/Loses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Loses"
            android:gravity="center"
            android:layout_weight="1"
            android:textAppearance="?android:textAppearanceLarge"/>


        <TextView
            android:id="@+id/Draws"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Draws"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/stats_nums"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/wins_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
             />

        <TextView
            android:id="@+id/Loses_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"/>


        <TextView
            android:id="@+id/Draws_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"/>



    </LinearLayout>

        </LinearLayout>

</RelativeLayout>
